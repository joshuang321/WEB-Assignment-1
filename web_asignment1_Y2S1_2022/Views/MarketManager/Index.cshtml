@model IEnumerable<web_asignment1_Y2S1_2022.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewFeedback" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Feedback ID</th>
                    <th>MemberID</th>
                    <th>Post Date and Time</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FeedbackID.ToString()</td>
                        <td>@item.MemberID</td>
                        <td>@item.DateTimePosted.ToString()</td>

                        <td>@item.Title</td>
                        <td>@item.Text</td>
                        <td>
                            @{ string imageFileName = item.ImageFileName + ".jpg"; }
                            <img src="~/images/@imageFileName"
                                 style="width:50px" />
                        </td>

                        <td>
                            <a asp-action="CreateResponse" asp-controller="MarketManager"
                               asp-route-Id="@item.FeedbackID">Create Response</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <span style="color:red">No record found!</span>
}